<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="RomajiConverter.WinUI.Controls.EditableLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Margin="4,4,4,4">
        <Border Visibility="{x:Bind Path=EditLabelVisibility,Mode=OneWay}" BorderThickness="1" CornerRadius="4"
                BorderBrush="#AAAAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Visibility="{x:Bind Path=EditLabelVisibility,Mode=OneWay}" x:Name="EditLabel"
                       Text="{x:Bind Text,Mode=TwoWay}" DoubleTapped="EditLabel_OnDoubleTapped"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Padding="4,4,4,4"
                       FontSize="{x:Bind Path=MyFontSize,Mode=OneWay}" />
        </Border>
        <TextBox Visibility="{x:Bind Path=EditBoxVisibility,Mode=OneWay}" x:Name="EditBox"
                 Text="{x:Bind Text,Mode=TwoWay}" TextWrapping="Wrap" TextAlignment="Center"
                 HorizontalAlignment="Center" VerticalAlignment="Center" KeyDown="EditBox_OnKeyDown"
                 LostFocus="EditBox_LostFocus" FontSize="{x:Bind Path=MyFontSize,Mode=OneWay}" />
    </Grid>
</UserControl>